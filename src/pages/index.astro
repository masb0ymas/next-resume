---
import CoreSkill from "~/components/CoreSkill.astro";
import Education from "~/components/Education.astro";
import Experience from "~/components/Experience.astro";
import GithubRepo from "~/components/GithubRepo.astro";
import PageMeta from "~/components/PageMeta.astro";
import Project from "~/components/Project.astro";
import SocialMedia from "~/components/SocialMedia.astro";
import Volunteer from "~/components/Volunteer.astro";
import { MY_NAME, MY_POSITION, SITE_TITLE } from "~/config/site";
import BaseLayout from "~/layouts/BaseLayout.astro";
---

<BaseLayout>
  <PageMeta
    title={`${SITE_TITLE} | All about software development`}
    slot="meta"
  />

  <section>
    <div class="sm:mt-14 mt-8">
      <div class="flex gap-3 sm:gap-5 justify-start items-center">
        <div class="avatar">
          <div
            class="ring-teal-400 ring-offset-base-100 w-20 rounded-full ring ring-offset-2"
          >
            <img src="/static/images/avatar.webp" alt="avatar" />
          </div>
        </div>

        <div class="sm:px-0 px-2">
          <h1 class="text-2xl sm:text-3xl font-bold text-slate-300">
            {MY_NAME}
          </h1>
          <h2 class="text-xl sm:text-2xl text-slate-300">
            {MY_POSITION}
          </h2>
        </div>
      </div>
    </div>

    <div class="py-4">
      <div class="py-6">
        <div class="relative rounded-lg p-[2px]">
          <p class="text-slate-100">
            Passionate about Software Development since 2017, I have over 6
            years of experience in the field and junior-level expertise in web3
            development. I quickly adapt to new challenges, excel in teamwork,
            focus on solutions, and manage work-related stress effectively.
          </p>
        </div>
      </div>

      <SocialMedia />
    </div>
  </section>

  <Experience />
  <Volunteer />
  <CoreSkill />
  <Project />
  <Education />
  <GithubRepo />
</BaseLayout>
