---
import githubJson from "~/data/github.json"

const githubs = githubJson.data.slice(0, 9)
---

<div class="my-16">
  <div class="mb-4">
    <h1 class="text-gray-200 text-2xl font-semibold">Open Source Github</h1>
    <h2 class="text-normal text-gray-300">
      List of open sources on GitHub that I'm working on and am free to use those repositories under
      the MIT license.
    </h2>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 py-4">
    {
      githubs.map((item) => {
        return (
          <div class="grid gap-4">
            <a href={item.repository_url} target="_blank" rel="noopener">
              <img class="w-full rounded" src={item.gsr_url} alt={item.title} />
            </a>
          </div>
        )
      })
    }
  </div>

  <div class="grid place-items-center content-center pt-6">
    <a
      class="m-auto appearance-none py-2 px-4 bg-slate-800 text-white font-medium rounded-lg shadow-md hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:ring-opacity-75"
      href="https://s.id/masb0ymas"
      target="_blank"
      rel="noopener"
    >
      Support Me
    </a>
  </div>
</div>
