---
import { SITE_URL } from "~/config/site";
import projectJson from "~/data/project.json";

const projects = projectJson.data.slice(0, 4);
---

<section class="py-6">
  <div class="grid gap-2">
    <h1 class="text-2xl sm:text-4xl text-slate-300 font-semibold">
      <u>Projects</u>
    </h1>

    <h2 class="text-normal text-slate-300">
      Some of the projects i have worked on so far are full-time or even
      freelance.
    </h2>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 py-4">
    {
      projects.map((item) => {
        const short_description =
          item.description.length > 80
            ? `${item.description.substring(0, 90)}...`
            : item.description;

        return (
          <div class="grid gap-4">
            <a
              class="link-hover"
              href={`${SITE_URL}/project/${item.slug}`}
              target="_blank"
              rel="noopener"
            >
              <img
                class="w-full rounded-xl"
                src={item.thumbnail}
                alt={item.title}
              />
            </a>

            <a
              class="link-hover"
              href={`${SITE_URL}/project/${item.slug}`}
              target="_blank"
              rel="noopener"
            >
              <span class="font-bold text-xl text-slate-300">{item.title}</span>
            </a>

            <p class="text-gray-300 text-sm">{short_description}</p>
          </div>
        );
      })
    }
  </div>

  <div class="grid place-items-center content-center pt-6">
    <a
      class="appearance-none py-2 px-4 bg-slate-700 text-white font-medium rounded-lg shadow-md hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:ring-opacity-75"
      href="/project"
      target="_blank"
      rel="noopener"
    >
      See more
    </a>
  </div>
</section>
