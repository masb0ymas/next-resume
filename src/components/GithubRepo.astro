---
import githubJson from "~/data/github.json";

const githubs = githubJson.data.slice(0, 4);
---

<section class="py-6">
  <div class="grid gap-2">
    <h1 class="text-2xl sm:text-4xl text-slate-300 font-semibold">
      <u>Open Source Github</u>
    </h1>

    <h2 class="text-normal text-slate-300">
      List of open sources on GitHub that I'm working on and am free to use those repositories under the MIT license.
    </h2>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 py-4">
    {
      githubs.map((item) => {
        return (
          <div class="grid gap-4">
            <a href={item.repository_url} target="_blank">
              <img class="w-full rounded" src={item.gsr_url} alt={item.title} />
            </a>
          </div>
        );
      })
    }
  </div>

  <div class="grid place-items-center content-center pt-6">
    <a
      class="m-auto appearance-none py-2 px-4 bg-slate-700 text-white font-medium rounded-lg shadow-md hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:ring-opacity-75"
      href="https://s.id/masb0ymas"
      target="_blank"
      rel="noopener"
    >
      Support Me
    </a>
  </div>
</section>
